
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_market_api" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.market.api</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='production_lot_info']" position="after">
                <h2>API de Mercado para Devoluciones</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <span class="o_form_label">Configuración de API</span>
                            <div class="text-muted">
                                Configura los parámetros para conectar con la API de mercado
                            </div>
                            <div class="content-group">
                                <div class="row mt16">
                                    <label for="market_api_url" class="col-lg-3 o_light_label"/>
                                    <field name="market_api_url"/>
                                </div>
                                <div class="row">
                                    <label for="market_api_key" class="col-lg-3 o_light_label"/>
                                    <field name="market_api_key" password="True"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>